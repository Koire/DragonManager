extends layout

block content

  div(class="flow-text center-align") #{atlastitle}
  div(class="container section center-align")
    div(class="row valign-wrapper")
      div(class="input-field col s12 l5")
        input(placeholder="TEAM" type="text")#team-query
        label(for="team-query") FIND CASTLES FOR ...
      div(class="input-field col s12 l5")
        input(placeholder="OWN TEAM" type="text")#own-team
        label(for="own-team") CLOSEST CASTLE FOR ...
      div(class="col s1")
        a(class="btn-floating btn waves-effect waves-light green lighten-3 white-text")#atlas-search
          i(class="material-icons") search
      div(class="col s1")
        a(class="btn-floating btn clip-btn waves-effect waves-light blue lighten-3 white-text")#atlas-copy
          i(class="material-icons") file_copy
    div(class="row valign-wrapper")
      div(class="col s4")
        label
          input(class="with-gap" name="filter-group" type="radio" checked)#filter-all
          span EVERYTHING
      div(class="col s4")
        label
          input(class="with-gap" name="filter-group" type="radio")#filter-nml
          span NEUTRAL + NML
      div(class="col s4")
        label
          input(class="with-gap" name="filter-group" type="radio")#filter-neutral
          span ONLY NEUTRAL

    div(class="row")
      div(class="col s12")
        table(class="striped")#castle-table
          thead(class="white")
            tr
              td NAME
              td TIER
              td ELEMENT
              td COORD
              td(width="5%") NML
              td(width="5%") NEUTRAL
              td CLOSEST

          tbody(class="searchable-teams")#team-castle-table

block inlinecode
  script(src='/js/jquery.hideseek.min.js')
  script(src='/js/dm_atlas_castles.js')
  script(src='/js/clipboard.min.js')
  script.
    // fetch the backend to use
    let backend = $('#backendUri').html();
    dm.atlas_castles.init(backend);
